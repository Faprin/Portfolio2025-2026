<section
  class="min-h-screen flex flex-col justify-center items-center relative overflow-hidden px-6"
>
  <div class="z-10 text-center">
    <h2
      class="text-lg md:text-xl text-blue-600 dark:text-blue-400 font-medium mb-4 opacity-0 hero-text"
    >
      Hola, soy
    </h2>
    <h1
      class="text-5xl md:text-7xl font-bold tracking-tight text-gray-900 dark:text-white mb-6 opacity-0 hero-text"
    >
      Jose Manuel Domínguez
    </h1>
    <p
      class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-10 opacity-0 hero-text"
    >
      Ingeniero de Software & Especialista en IA
    </p>

    <div class="flex gap-4 justify-center opacity-0 hero-btn">
      <a
        href="#contact"
        class="px-8 py-3 bg-gray-900 dark:bg-white text-white dark:text-gray-900 font-medium rounded-full hover:scale-105 transition-transform duration-300"
      >
        Contactar
      </a>
      <a
        href="#about"
        class="px-8 py-3 border border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white font-medium rounded-full hover:bg-gray-100 dark:hover:bg-gray-900 transition-colors"
      >
        Sobre mí
      </a>
    </div>
  </div>

  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-3xl -z-10 animate-pulse"
  >
  </div>
</section>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const tl = gsap.timeline();

    tl.to(".hero-text", {
      y: 0,
      opacity: 1,
      duration: 1,
      stagger: 0.2,
      ease: "power3.out",
      translateY: 20,
    });

    gsap.fromTo(
      ".hero-text",
      { y: 50, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.2,
        ease: "power3.out",
        delay: 0.2,
      }
    );

    gsap.fromTo(
      ".hero-btn",
      { y: 20, opacity: 0 },
      { y: 0, opacity: 1, duration: 1, delay: 1, ease: "power3.out" }
    );
  });
</script>
